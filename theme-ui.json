            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "isCvvSuppressed",
                    "fieldLabel": "CVV Suppressed"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Anonymous Account Verification Options",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "zipCodeEnabled",
                    "fieldLabel": "Billing Zip Code"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "phoneNumberEnabled",
                    "fieldLabel": "Billing Phone Number"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "billingEmailEnabled",
                    "fieldLabel": "Billing Email"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Text",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-selectmulti",
                    "name": "loadGoogleFonts",
                    "fieldLabel": "Load Google Fonts",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "Source Sans Pro",
                        "Open Sans",
                        "Raleway",
                        "Lora",
                        "Rokkitt"
                    ]
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "primaryFont",
                    "fieldLabel": "Primary Font",
                    "allowBlank": false,
                    "storeFrom": "loadGoogleFonts",
                    "forceSelection": true
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "fontSize",
                    "fieldLabel": "Font Size",
                    "allowBlank": false,
                    "editable": false,
                    "forceSelection": true,
                    "store": [
                        "12px",
                        "14px",
                        "16px",
                        "18px",
                        "20px"
                    ]
                },
                {
                    "xtype": "mz-input-color",
                    "name": "textColor",
                    "fieldLabel": "Text Color"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Paging",
            "collapsed": false,
            "items": [

                {
                    "fieldLabel": "Show these page size options",
                    "xtype": "mz-input-selectmulti",
                    "name": "pageSizeOptions",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        15,
                        25,
                        50,
                        100,
                        500
                    ]
                },
                {
                    "fieldLabel": "Default items per page",
                    "xtype": "mz-input-dropdown",
                    "name": "defaultPageSize",
                    "allowBlank": false,
                    "forceSelection": true,
                    "storeFrom": "pageSizeOptions"
                },
                {
                    "fieldLabel": "Default Sort Order",
                    "xtype": "mz-input-text",
                    "name": "defaultSort",
                    "allowBlank": true      ,
                    "allowOnlyWhitespace": true
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Navigation",
            "collapsed": false,
            "items": [
                {
                    "fieldLabel": "Maximum Items In Main Nav",
                    "xtype": "mz-input-number",
                    "name": "maxTopLevelNavItems",
                    "hideTrigger": false,
                    "allowDecimal": false,
                    "minValue": 1
                },
                {
                    "fieldLabel": "Maximum Nav Item Label Length",
                    "xtype": "mz-input-number",
                    "name": "maxTopLevelNavLabelLength",
                    "hideTrigger": false,
                    "allowDecimal": false,
                    "minValue": 4,
                    "allowBlank": false
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Border Configuration",
