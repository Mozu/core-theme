{
    "items": [
        {
            "xtype": "panel",
            "title": "General",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "showAddressTypeDropdown",
                    "fieldLabel": "Show Address Type dropdown in Address Forms (Residential/Commercial)"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "enablePartialCaching",
                    "fieldLabel": "Enable partial caching using the Hypr {% partial_cache %} tag"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Recaptcha",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "enableRecaptcha",
                    "fieldLabel": "Enable Recaptcha"
                },
                {
                    "xtype": "mz-input-text",
                    "name": "recaptchaSiteKey",
                    "fieldLabel": "Recaptcha Site Key"
                },
                {
                    "xtype": "mz-input-text",
                    "name": "__recaptchaSecrete",
                    "fieldLabel": "Recaptcha Secret",
                    "inputType": "password"
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "recaptchaType",
                    "fieldLabel": "Recaptcha Type",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "Invisible",
                        "I'm not a robot"
                    ]
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "recaptchaSize",
                    "fieldLabel": "Recaptcha Size",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "normal",
                        "compact"
                    ]
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "recaptchaTheme",
                    "fieldLabel": "Recaptcha Theme",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "light",
                        "dark"
                    ]
                },
                {
                    "xtype": "mz-input-dropdown",
                    "name": "recaptchaBadgePosition",
                    "fieldLabel": "Recaptcha Badge Position",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "bottomright",
                        "bottomleft",
                        "inline"
                    ]
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Filters",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "allowFilterByLocationInventory",
                    "fieldLabel": "Allow Filter by Location Inventory"
                },
                                {
                   "fieldLabel": "Max Number of Locations",
                    "xtype": "mz-input-dropdown",
                    "name": "maxFilterLocations",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        50,
                        100,
                        150,
                        200
                    ]
                },
                {
                    "fieldLabel": "Filter Label Text (limit 30 characters)",
                    "xtype": "mz-input-text",
                    "name": "locationInventoryFilterText",
                    "allowBlank": true,
                    "allowOnlyWhitespace": true,
                    "maxValue": 30
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Extended Properties",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "extendedPropertiesEnabled",
                    "fieldLabel": "Enable Extended Properties (Tracking Strings)"
                },
                {
                    "xtype": "mz-input-textarea",
                    "name": "extendedPropertyParameters",
                    "fieldLabel": "Query Parameters (comma separated)"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Product Lists",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "listProductCode",
                    "fieldLabel": "Show product code in product lists"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "listProductShortDesc",
                    "fieldLabel": "Show product short description in product lists"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "listVolumePricing",
                    "fieldLabel": "Show volume pricing bands in product lists"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Search",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-checkbox",
                    "name": "showChildCategoriesInFaceting",
                    "fieldLabel": "Show two levels of the category hierarchy in faceting"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "useSearchAutocomplete",
                    "fieldLabel": "Show search suggestions"
                },
                {
                    "xtype": "mz-input-checkbox",
                    "name": "suggestPriorSearchTerms",
                    "fieldLabel": "Show search terms others used on this site in search suggestions",
                    "enableIf": "useSearchAutocomplete"
                }
            ]
        },
        {
            "xtype": "panel",
            "title": "Layout",
            "collapsed": false,
            "items": [
                {
                    "xtype": "mz-input-dropdown",
                    "name": "gutterWidth",
                    "fieldLabel": "Base Margin Width",
                    "allowBlank": false,
                    "forceSelection": true,
                    "store": [
                        "15px",
                        "20px",
                        "25px",
                        "30px",
                        "35px"
                    ]
                }
            ]
        },
        {
            "xtype": "panel",
