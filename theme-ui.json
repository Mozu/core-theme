                    "fieldLabel": "Enable Monetate Personalization"
                },
                {
                    "xtype": "mz-input-text",
                    "name": "monetateAccountNumber",
                    "fieldLabel": "Account Number"
                },
                {
                    "xtype": "mz-input-text",
                    "name": "monetateDomain",
                    "fieldLabel": "Domain"
                },
                {
                    "fieldLabel": "Instance Type",
                    "xtype": "mz-input-dropdown",
                    "name": "monetateInstance",
                    "allowBlank": true,
                    "forceSelection": true,
                    "store": [
                        ["d", "Development"],
                        ["p", "Production"],
                        ["s", "Sales"],
                        ["t", "Testing"]
                    ]
                }
            ]
        }
    ]
}
